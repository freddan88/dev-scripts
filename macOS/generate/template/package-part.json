{
  "private": true,
  "browserslist": [
    ">0.25%",
    "not ie 11",
    "not op_mini all"
  ],
  "scripts": {
    "build": "rollup --config",
    "start": "rollup --config --watch --environment NODE_ENV:production",
    "test": "stylelint '**/*.scss'; exit 0",
    "www": "php -S 0.0.0.0:8585",
    "help": "npx browserslist && echo 'Usage: npm run: build | start | test | www'"
  },
  "stylelint": {
    "plugins": [
      "stylelint-scss"
    ],
    "extends": "stylelint-config-standard"
  },
